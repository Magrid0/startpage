{
  "manifest_version": 3,
  "name": "Magrid Startpage",
  "version": "1.8.1",
  "description": "Replaces homescreen and newtab with my personal start page.",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "chrome_settings_overrides": {
    "homepage": "index.html"
  },
  "permissions": ["storage"],
  "host_permissions": ["https://api.nasa.gov/"],
  "action": {
    "default_title": "Magrid Startpage"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "newtab@magrid.com",
      "strict_min_version": "109.0"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
