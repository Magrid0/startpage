{
  "manifest_version": 3,
  "name": "Magrid Startpage",
  "version": "1.6.1",
  "description": "Replaces the new tab with my personal homepage.",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": ["storage"],
  "host_permissions": ["https://api.nasa.gov/"],
  "action": {
    "default_title": "Magrid Startpage"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "newtab@magrid.com",
      "strict_min_version": "58.0"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
